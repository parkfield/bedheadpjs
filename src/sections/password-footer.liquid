<!-- sections/password-footer.liquid -->

<footer class="container center">

  {% if section.settings.show_share_buttons %}
    <p class="h4">{{ section.settings.social_message }}</p>
    {% include 'social-sharing' %}
  {% endif %}

  {% capture shopify %}
    <a class="classic-link shopify-link" href="//www.shopify.com" target="_blank" title="Create your own online store with Shopify">Shopify</a>
  {% endcapture %}
  <hr>
  <p>
    <small>{{ 'password_page.powered_by_shopify_html' | t: shopify: shopify }}</small><br>
    <small><a href="" data-trigger="trigger" data-target="#PasswordPagePopup">{{ 'password_page.password_link' | t }}</a></small>
  </p>

  <div class="popup overlay" role="alert" id="PasswordPagePopup">
    <div class="popup-inner">
      <div class="popup-outside"></div>
      <div class="popup-content">
        <p class="h4">{{ 'password_page.login_form_heading' | t }}</p>
        {% form 'storefront_password' %}
          {{ form.errors | default_errors }}
          <label for="password" class="hidden">{{ 'password_page.login_form_password_label' | t }}</label>
          <input type="password" name="password" id="Password" placeholder="{{ 'password_page.login_form_password_placeholder' | t }}">
          <button type="submit" name="commit">
            {{ 'password_page.login_form_submit' | t }}
          </button>
        {% endform %}
        <hr>
        <small>{{ 'password_page.admin_link_html' | t }}</small>
        <a href="#close" class="popup-close" aria-label="{{ 'common.close' | t }}">{{ 'common.close' | t }}</a>
      </div>
    </div>
  </div>

</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
      {
        "type": "text",
        "id": "social_message",
        "label": "Social sharing buttons heading",
        "default": "Spread the word"
      }
    ]
  }
{% endschema %}
