<div class="prev"></div>
<div class="slider">
{% for block in section.blocks %}
<div class="slide slide-{{forloop.index}}">
<div class="image" style="background-image: url('{{block.settings.image | img_url:'master'}}" alt="{{block.settings.image.alt}}');"></div>
<div class="text-block">
  <h2 class="main-text">{{block.settings.heading_line1}}<br>{{block.settings.heading_line2}}</h2>
  <p class="sub-text">{{block.settings.subtext_line1}}<br>{{block.settings.subtext_line2}}</p>
  <a class="btn" href="{{block.settings.button_url}}">{{block.settings.button_text}}</a>
</div>
</div>
{% endfor %}
</div>
<div class="next"></div>
<div class="dots"></div>
<style>
{% for block in section.blocks %}
  .homepage-hero .slide-{{forloop.index}} .text-block .main-text, 
  .homepage-hero .slide-{{forloop.index}} .text-block .sub-text{
    color:  {{block.settings.color}};
  }
  @media screen and (max-width: 600px){
    .homepage-hero .slide-{{forloop.index}} .image{
      padding-top:{{block.settings.mobile_padding_top}}%;
      background-position: {{block.settings.mobile_horizontal_position}}% 50%;
    }
  }
  @media screen and (max-width: 850px){
    .homepage-hero .slide-{{forloop.index}} .image{
      padding-top:{{block.settings.mobile_padding_top | minus: 50}}%;
      background-position: {{block.settings.mobile_horizontal_position}}% 50%;
    }
  }
{% endfor %}
</style>
<script>
  $('.homepage-hero .slider').slick({
    'nextArrow':'.homepage-hero .next',
    'prevArrow':'.homepage-hero .prev',
    'dots':true
  });
</script>
{% schema %}
  {
    "name": "Hero",
    "class": "homepage-hero",
    "settings": [
      {
        "type": "select",
        "id": "autoplay_speed",
        "label": "Autoplay Speed",
        "default": "3",
        "options": [
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ]
      }
    ],
    "blocks":[
      {
        "type":"slide",
        "name":"Slide",
        "limit": 5,
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
          },
          {
            "type":"header",
            "content":"Heading Settings"
          },
          {
            "type":"text",
            "id":"heading_line1",
            "label":"Heading Line 1"
          },
          {
            "type":"text",
            "id":"heading_line2",
            "label":"Heading Line 2"
          },
          {
            "type":"text",
            "id":"subtext_line1",
            "label":"Subtext Line 1"
          },
          {
            "type":"text",
            "id":"subtext_line2",
            "label":"Subtext Line 2"
          },
          {
            "type":"color",
            "id":"color",
            "label":"Text Color",
            "default":"#FFFFFF"
          },
          {
            "type":"header",
            "content":"Button Settings"
          },
          {
            "type":"text",
            "id":"button_text",
            "label":"Text"
          },
          {
            "type":"url",
            "id":"button_url",
            "label":"Link"
          },
          {
            "type":"header",
            "content":"Mobile Image Settings"
          },
          {
              "type":   "range",
              "id":     "mobile_padding_top",
              "min":       0,
              "max":       200,
              "step":      5,
              "unit":      "%",
              "label":     "Mobile Image Height",
              "default":   135
          },
          {
              "type":   "range",
              "id":     "mobile_horizontal_position",
              "min":       0,
              "max":       100,
              "step":      5,
              "unit":      "%",
              "label":     "Mobile Horizontal Position",
              "default":   35,
              "info":"Changes the horizontal position of the image, if the entire image isn't shown"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
