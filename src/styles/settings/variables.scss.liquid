/* Variables =================================================================*/

// Colors
$colorBrand: {{ settings.color_brand }};
$colorText: {{ settings.color_body }};
$colorForeground: {{ settings.color_body }};
$colorBackground: {{ settings.color_background }};
$colorHighlight: {{ settings.color_highlight }};
$colorAlternate: {{ settings.color_alternate }};

$accent-color: #A0DAE8;
$accent-color-2: #F9FAEF;
$font-color: #333E48;
$font-color-light: white;
$bg-main: white;
$bg-dark: #333E48;
$bg-light: #F7F7F7;
$border-color: {{ settings.border_color }};
$footer-link: #A1A4AA;
$bad-status: #d9534f;
//Mobile Nav
$mobile-alternate-bg: #F8F8F9;
//Collection Product
$quick-add-label: white;
$quick-add-active: white;
$quick-add-inactive: #B3E9F6;
$new-icon: #A2AD00;
$new-icon-bg: white;
// Typography
$fontLight: 300;
$fontRegular: 400;
$fontBold: 700;
$lineHeight: 1.5;

// Space & Borders
$gutter: 20px;
$borderRadius: 1px;
$borderWeight: 1px;
$borderStyle: solid;

// Screen Sizes
$s: 600px;
$m: 850px;
$l: 1280px;
$xl: 1440px;

// Miscellaneous
$logoMaxWidth: {{ settings.logo_max_width | default: '450' | remove: 'px' }}px;
$transition: all .3s ease-out;

// Icons
$baseIconSize: 32px;
$iconLinecap: sqaure;
