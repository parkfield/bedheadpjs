/* Variables =================================================================*/

// Colors
$colorBrand: {{ settings.color_brand }};
$colorText: {{ settings.color_body }};
$colorForeground: {{ settings.color_body }};
$colorBackground: {{ settings.color_background }};
$colorHighlight: {{ settings.color_highlight }};
$colorAlternate: {{ settings.color_alternate }};

$accent-color: {{settings.accent_color}};
$accent-color-2: {{settings.accent_color2}};
$font-color: {{settings.font_color}};
$font-color-light: {{settings.font_color_light}};
$bg-main: {{settings.bg_main_color}};
$bg-dark: {{settings.bg_dark_color}};
$bg-light: {{settings.bg_light_color}};
$border-color: {{ settings.border_color }};
$footer-link: {{settings.footer_link_color}};
$bad-status: #d9534f;
//Mobile Nav
$mobile-alternate-bg: #F8F8F9;
//Collection Product
$onsale: {{settings.product_sale}};
$quick-add-label: {{settings.qa_label}};
$quick-add-active: {{settings.qa_active}};
$quick-add-inactive: {{settings.qa_inactive}};
$new-icon: {{settings.new_icon_accent}};
$new-icon-bg: {{settings.new_icon_bg}};
// Typography
$fontLight: 300;
$fontRegular: 400;
$fontBold: 700;
$lineHeight: 1.5;

// Space & Borders
$gutter: 20px;
$borderRadius: 1px;
$borderWeight: 1px;
$borderStyle: solid;

// Screen Sizes
$s: 600px;
$m: 850px;
$l: 1280px;
$xl: 1440px;

// Miscellaneous
$logoMaxWidth: {{ settings.logo_max_width | default: '450' | remove: 'px' }}px;
$transition: all .3s ease-out;

// Icons
$baseIconSize: 32px;
$iconLinecap: sqaure;
