}

@mixin max-query($resolution){
  @media screen and (max-width: $resolution){
    @content;
  }
}
@mixin placeholder {
  &.placeholder { 
    @content; 
    opacity: 1;
  }
  &:-moz-placeholder { 
    @content; 
    opacity: 1;
  }
  &::-moz-placeholder {
   @content; 
   opacity: 1;
 }
  &::-webkit-input-placeholder { 
    @content; 
    opacity: 1;
  }
}
.logo-container{
  max-width: 100%;
  float: left;
  background-color: $accent-color;
  width: 100%;
  padding: 50px 0px;
  img{
    max-width: 188px;
    margin: 0 auto;
  }
}

.desktop-logo-container{
  @include max-query(1000px){
    display: none;
  } 
}
.mobile-banner{
  padding: 0px;
}
.mobile-logo-wrap{
  max-width: 100%;
  padding: 0px;
}
h2.section__title{
  color: black;
  @include lato-bold(.875rem);
  text-transform: uppercase;
}
.breadcrumb--center{
  text-align: left;
}
.breadcrumb__link, .breadcrumb__text{
  @include lato-reg(.875rem);
  text-transform: uppercase !important;
}

.field__label, .floating-labels .field__label{
  @include lato-reg(0.75rem);
  text-transform: uppercase;
}
.field__input{
  color: $font-color !important;
  @include placeholder{
    text-transform: uppercase !important; 
    @include lato-reg(0.75rem);
  }
}
.product__description{
  @include lato-reg(.75rem);
  text-transform: uppercase;
}
.product__description__name.order-summary__emphasis{
  color: black !important;
}
.product__price span{
  @include lato-bold(.875rem);
  color: black !important;
}
a, .icon-svg--color-accent{
  color: black !important;
  &:hover{
    color: $accent-color !important;
  }
}
input[type="checkbox"], input, button, select{
  border-radius: 0px !important;
}
select{
  text-transform: uppercase !important;
}
.total-line-table .total-line__name{
  @include lato-reg(.875rem);
  text-transform: uppercase;
  color: #9B9B9B;
}
.total-line__price .order-summary__emphasis{
  @include lato-bold(.875rem);
  color: black;
}
.total-line .payment-due-label__total{
  color: black !important;
  font-size: 1.25rem !important;
}
.total-line__price .payment-due__price{
  font-size: 1.875rem;
  color: black;
}
button[type="submit"][disabled="disabled"]{
  background-color: #9B9B9B;
  color: white;
}
button[type="submit"]{
  @include roboto-reg(.75rem);
  text-transform: uppercase;
}

.policy-list a{
  color: black;
  text-transform: uppercase;
  @include lato-reg(.875rem);
}