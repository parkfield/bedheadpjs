<div class="image rellax" data-rellax-speed=".1" style="background-image: url('{{section.settings.image | img_url:'master'}}');" alt="{{section.settings.image.alt}}');">
  <div class="text-container rellax" data-rellax-speed="1.1">
  <div data-aos="fade-up" data-aos-anchor-placement="top-center"  data-aos-offset="-300">

    <h2>
      {{section.settings.heading_line1}}<br>
      {{section.settings.heading_line2}}<br>
      {{section.settings.heading_line3}}
    </h2>
    <a class="btn" href="{{section.settings.button_url}}">{{section.settings.button_text}}</a>
  </div>
  </div>
</div>

<style>
  .homepage-image-banner  .text-container h2{
    color:  {{section.settings.color}};
  }
  
  .homepage-image-banner .image{
    padding-top:{{section.settings.desktop_padding_top}}%;
    background-position: {{section.settings.desktop_horizontal_position}}% 50%;
  }
  @media screen and (max-width: 850px){
    .homepage-image-banner .image{
      padding-top:{{section.settings.mobile_padding_top}}%;
      background-position: {{section.settings.mobile_horizontal_position}}% 50%;
    }
  }

  @media screen and (max-width: 600px){
    .homepage-image-banner .image{
      padding-top:{{section.settings.mobile_padding_top | plus: 80 }}%;
      background-position: {{section.settings.mobile_horizontal_position}}% 50%;
    }
  }
</style>
{% schema %}
  {
    "name": "Image Banner",
    "class": "homepage-image-banner",
    "settings": [
      {
        "type":"header",
        "content":"Text Block Settings"
      },
      {
        "type":"text",
        "id":"heading_line1",
        "label":"Heading Line 1"
      },
      {
        "type":"text",
        "id":"heading_line2",
        "label":"Heading Line 2"
      },
      {
        "type":"text",
        "id":"heading_line3",
        "label":"Heading Line 3"
      },
      {
        "type":"color",
        "id":"color",
        "label":"Text Color",
        "default":"#333e48"
      },
      {
        "type":"header",
        "content":"Button Settings"
      },
      {
        "type":"text",
        "id":"button_text",
        "label":"Text"
      },
      {
        "type":"url",
        "id":"button_url",
        "label":"Link"
      },
      {
        "type":"header",
        "content":"Image Settings"
      },
      {
        "type": "image_picker",
        "id":"image",
        "label":"Image"
      },
      {
        "type":"header",
        "content":"Desktop Image Settings"
      },
      {
          "type":   "range",
          "id":     "desktop_padding_top",
          "min":       0,
          "max":       100,
          "step":      1,
          "unit":      "%",
          "label":     "Desktop Image Height",
          "default":   49
      },
      {
          "type":   "range",
          "id":     "desktop_horizontal_position",
          "min":       0,
          "max":       100,
          "step":      1,
          "unit":      "%",
          "label":     "Desktop Horizontal Position",
          "default":   50,
          "info":"Changes the horizontal position of the image, if the entire image isn't shown"
      },
      {
        "type":"header",
        "content":"Mobile Image Settings"
      },
      {
          "type":   "range",
          "id":     "mobile_padding_top",
          "min":       50,
          "max":       150,
          "step":      1,
          "unit":      "%",
          "label":     "Mobile Image Height",
          "default":   135
      },
      {
          "type":   "range",
          "id":     "mobile_horizontal_position",
          "min":       0,
          "max":       100,
          "step":      1,
          "unit":      "%",
          "label":     "Mobile Horizontal Position",
          "default":   35,
          "info":"Changes the horizontal position of the image, if the entire image isn't shown"
      }
    ],
    "presets": [
      {
        "name": "Image Banner",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}