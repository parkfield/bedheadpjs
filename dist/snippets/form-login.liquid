<!-- snippets/form-login.liquid -->

<div id="LoginForm">
  {% form 'customer_login' %}

    <p>{{ 'account.no_account' | t }} {{ 'account.create_account' | t | customer_register_link }}</p>

    {{ form.errors | default_errors }}

    <label for="CustomerEmail" class="clearfix">{{ 'form.email' | t }}</label>
    <input type="email" name="customer[email]" id="CustomerEmail" class="AutoFocus{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'form.email' | t }}" autocorrect="off" autocapitalize="off" autofocus>
    {% if form.password_needed %}
      <label for="CustomerPassword" class="clearfix">{{ 'account.password' | t }}</label>
      <input type="password" value="" name="customer[password]" id="CustomerPassword" {% if form.errors contains 'password' %}class="error"{% endif %} placeholder="{{ 'account.password' | t }}">
    {% endif %}

    <input type="submit" class="wide" value="{{ 'account.sign_in' | t }}">

    <p>
      <p><a href="{{ shop.url }}">{{ 'form.cancel' | t }}</a></p>

      {% if form.password_needed %}
        <br><a href="/account/login?view=recover">{{ 'account.forgot_password' | t }}</a>
      {% endif %}
    </p>

  {% endform %}
</div>
