<!-- /templates/list-collections.liquid -->

{% for collection in collections %}

  {% unless collection.handle == 'frontpage' %}

    {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}

    <div class="container l">
      <div class="row">
        <div class="column l12">
      <p class="h1 section-header__left"><a href="{{ collection.url }}" title="{{ 'collection.title }}">{{ collection_title }}</a>
      </p>
      <a href="{{ collection.url }}" title="{{ 'collection.title }}">More {{ collection_title }} &rsaquo;</a>
      </div>
      </div>
    </div>

    <div class="container l">
      <div class="row">
        {% for product in collection.products limit: 4 %}
          {% assign column_width = 'column l3 m3 s12' %}
          {% include 'collection-product' %}
        {% endfor %}
      </div>
    </div>

    {% unless forloop.last %}<hr>{% endunless %}

  {% endunless %}

{% endfor %}
